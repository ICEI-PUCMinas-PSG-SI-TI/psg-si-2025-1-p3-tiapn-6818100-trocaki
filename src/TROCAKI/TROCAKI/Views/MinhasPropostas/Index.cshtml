@{
	ViewData["Title"] = "Minhas propostas";
}

<div class="container py-5">
    <h3 class="mb-4">Minhas propostas</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <!-- Card de Proposta -->
        <div class="col">
            <a class="text-decoration-none text-dark" asp-area="" asp-controller="Produto" asp-action="index">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Produto">
                    <div class="card-body">
                        <h5 class="card-title">Piercing Argola Aço Cirúrgico</h5>
                        <p class="mb-1 text-muted">Preço original: <strong>R$ 48,89</strong></p>
                        <p class="mb-1">Proposta: <span class="text-primary">R$ 40,00</span></p>
                        <span class="badge bg-warning text-dark">Em aberto</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Outro Card -->
        <div class="col">
            <a class="text-decoration-none text-dark" asp-area="" asp-controller="Produto" asp-action="index">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Produto">
                    <div class="card-body">
                        <h5 class="card-title">Fone de Ouvido Bluetooth</h5>
                        <p class="mb-1 text-muted">Preço original: <strong>R$ 129,90</strong></p>
                        <p class="mb-1">Proposta: <span class="text-primary">R$ 110,00</span></p>
                        <span class="badge bg-warning text-dark">Em aberto</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Mais cards podem ser adicionados aqui da mesma forma -->

    </div>
</div>