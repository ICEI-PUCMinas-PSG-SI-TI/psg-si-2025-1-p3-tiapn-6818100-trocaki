<style>
    .product-image {
        max-width: 100%;
        height: auto;
    }

    .badge-state {
        background-color: #b0f2c2;
        color: #0f5132;
    }

    .price-tag {
        font-weight: bold;
        color: #1d4ed8;
    }

    .favorite {
        color: #e63946;
        font-size: 1.5rem;
        cursor: pointer;
    }

    .card-price {
        color: #f97316;
        font-weight: bold;
